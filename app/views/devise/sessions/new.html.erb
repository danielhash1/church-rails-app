<body class="bg-gray-100 flex justify-center h-screen">
  
  <a href="/" class="text-gray-500 hover:text-black items-center block m-10 flex">
      <i class="fas fa-arrow-left mr-2"></i>Back
  </a>
  
  <div class="flex justify-center mx-auto w-full max-w-md">
    <div class="w-full max-w-md bg-white rounded-2xl shadow-md p-8">

      <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Login to your account</h2>

      <% if resource.errors.any? %>
        <div class="mb-4">
          <ul class="text-red-600">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <!-- CSRF Token -->
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

        <!-- Email input -->
        <div class="mb-4">
          <%= f.label :email, class: "block text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 mt-1 text-gray-700 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
        </div>

        <!-- Password input -->
        <div class="mb-4">
          <%= f.label :password, class: "block text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 mt-1 text-gray-700 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500", required: true %>
        </div>

        <% if devise_mapping.rememberable? %>
        <!-- Remember Me Checkbox -->
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
          </div>
         
        </div>
        <% end %>

        <!-- Login Button -->
        <div class="actions">
          <%= f.submit "Log in", class: "cursor-pointer w-full py-2 mt-2 px-4 bg-blue-600 text-white rounded-lg font-semibold hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      <% end %>

    </div>
  </div>

</body>
